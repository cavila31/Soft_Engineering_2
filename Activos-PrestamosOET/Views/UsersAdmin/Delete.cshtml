@model Activos_PrestamosOET.Models.ApplicationUser
@{
    ViewBag.Title = "Eliminar usuario";
}
<div class="row">
    <div class="col-xs-12">
        <br />
        @Html.ActionLink("Regresar", "Index")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <h2>@ViewBag.Title</h2>
        <h4>¿Esta seguro que desea eliminar a este usuario?</h4>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-5 col-sm-offset-1">
        <div class="row">
            <div class="col-xs-12">
                <h4>Datos del usuario</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                @Html.LabelFor(model => model.FullName)
            </div>
            <div class="col-xs-8">
                <p>@Html.DisplayFor(model => model.FullName)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <label for="correo" class="control-label">Correo</label>
            </div>
            <div class="col-xs-8">
                <p id="correo">@Html.DisplayFor(model => model.Email)</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <label class="control-label" for="estacion">Estación</label>
            </div>
            <div class="col-xs-8">
                <p id="estacion">@ViewBag.Estacion</p>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-5">
        <div class="row">
            <div class="col-xs-12">
                <h4>Roles del usuario</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                @if (ViewBag.RoleNames.Count == 0)
                {
                    <p>No se le han asignado roles al usuario</p>
                }
                else
                {
                    <ul>
                        @foreach (var item in ViewBag.RoleNames)
                {
                            <li>
                                <p>@item</p>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="pull-right">
                <div class="form-group">
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary" })
                    <input type="submit" value="Borrar" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#opciones_avanzadas").addClass("active");
    </script>
}