@model Activos_PrestamosOET.Models.TIPOS_TRANSACCIONES

@{
    ViewBag.Title = "Borrar";
}
<div class="row">
    <div class="col-xs-12">
        <h2>Eliminar</h2>
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h3>¿Está seguro de que desea eliminar el tipo de transacción?</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-5 col-sm-offset-1">
        <div class="row">
            <div class="col-xs-5">
                @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-xs-7">
                @Html.DisplayFor(model => model.NOMBRE)
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <div class="pull-right">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary" })
                    <input type="submit" value="Eliminar" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#opciones_avanzadas").addClass("active");
    </script>
}