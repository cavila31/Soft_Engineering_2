@model IEnumerable<Activos_PrestamosOET.Models.CENTROS_DE_COSTOS>

@{
    ViewBag.Title = "Centros de costo";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Centros de costos en el sistema</h2>
        <hr />
    </div>
</div>
@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col-xs-12">
            <h3 class="text-center">No hay ningún centro de costo en el sistema. <small>@Html.ActionLink("¡Ingresa el primero!", "Create")</small></h3>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th colspan="3" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new {id= item.Id})">
                                    <span class="glyphicon glyphicon-edit text-warning" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", new { id = item.Id })">
                                    <span class="glyphicon glyphicon-eye-open text-info" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Delete", new { id = item.Id })">
                                    <span class="glyphicon glyphicon-erase text-danger" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <div class="pull-right">
                @Html.ActionLink("Crear un nuevo centro de costo", "Create", new object { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $("#opciones_avanzadas").addClass("active");
    </script>
}